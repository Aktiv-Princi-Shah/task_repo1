<odoo>
    <!--library member action-->
    <record id="library_member_action" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.members</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--library member form view-->
    <record id="library_member_view_form" model="ir.ui.view">
        <field name="name">Member Form</field>
        <field name="model">library.members</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="borrowed_book_ids" readonly="1"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="membership_date"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!--library member list view-->
    <record id="library_member_view_list" model="ir.ui.view">
        <field name="name">Member List</field>
        <field name="model">library.members</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="borrowed_book_ids" string="Book Borrowed"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="membership_date"/>
            </list>
        </field>
    </record>
</odoo>
