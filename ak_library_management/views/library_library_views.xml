<odoo>
    <!--library action-->
    <record id="library_library_action" model="ir.actions.act_window">
        <field name="name">Library</field>
        <field name="res_model">library.library</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--library form view-->
    <record id="library_library_view_form" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">library.library</field>
        <field name="arch" type="xml">
            <form string="Library">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="capacity"/>
                        <field name="book_count"/>
                        <field name="capacity_status"/>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="author_ids"/>
                                    <field name="publication_date"/>
                                    <field name="library_location"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--library list view-->
    <record id="library_library_view_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">library.library</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
            </list>
        </field>
    </record>
</odoo>
