<odoo>
    <!--library form view-->
    <record id="library_library_view_form" model="ir.ui.view">
        <field name="name">Library Form</field>
        <field name="model">library.library</field>
        <field name="arch" type="xml">
            <form string="Library">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Product (Books)">
                            <field name="book_ids" widget="many2many"
                                   options="{'no_create':True, 'no_edit':True}">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="name"/>
                                    <field name="available"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--library list view-->
    <record id="library_library_view_list" model="ir.ui.view">
        <field name="name">Library List</field>
        <field name="model">library.library</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location"/>
            </list>
        </field>
    </record>

    <!--library action-->
    <record id="library_library_action" model="ir.actions.act_window">
        <field name="name">Library</field>
        <field name="res_model">library.library</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
