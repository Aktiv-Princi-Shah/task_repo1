<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--product menu inheritance from sale module-->
    <menuitem id="sale.menu_products"
              action="product.product_normal_action_sell"
              groups="product.group_product_variant"
              parent="sale.product_menu_catalog"
              name="Product Items"
              sequence="30"/>
    <!--product submenu pricelist inherited from sale module-->
    <menuitem id="sale.menu_product_pricelist_main"
              name="Pricelists"
              action="product.product_pricelist_action2"
              groups="product.group_product_pricelist"
              parent="sale.product_menu_catalog"
              sequence="21"/>
    <!--configuration menu addition by adding customer as a sub menu item-->
    <menuitem id="customer_sales_team_config"
              name="Customer"
              action="sales_team.crm_team_action_config"
              parent="sale.menu_sale_config"
              sequence="25"/>
    <!--changing the name of Quotation to Draft Quotation-->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="name">Draft Quotations</field>
    </record>
    <!--draft quotation only list view-->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="view_mode">list</field>
    </record>
    <record id="sale_order_tree_inherit_booktree" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.booktree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="editable">bottom</attribute>
            </list>
        </field>
    </record>
</odoo>
