<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--book action-->
    <record id="library_book_view" model="ir.actions.act_window">
        <field name="name">Library Book</field>
        <field name="res_model">book</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--book list view-->
    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">book</field>
        <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="isbn"/>
                    <field name="state"/>
                </list>
        </field>
    </record>

    <!-- book form view -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">book</field>
        <field name="arch" type="xml">
            <form string="Book Details">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="isbn"/>
                        <field name="category_id"/>
                        <field name="publication_date"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>