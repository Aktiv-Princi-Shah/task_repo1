<odoo>
<!--    library book action-->
    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

<!--    library form view-->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="library_id"/>
                        <field name="category_ids" widget="one2many_tags"/>
<!--                        <field name="member_ids" widget="one2many_tags"/>-->
                    </group>
                    <group>
                        <field name="date_release"/>
                        <field name="isbn_number"/>
                        <field name="book_state"/>
                        <field name="book_description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

<!--    library list view-->
    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">Library Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_ids" widget="many2many_tags"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="library_id"/>
                <field name="date_release"/>
                <field name="book_description"/>
                <field name="isbn_number"/>
                <field name="book_state"/>
            </list>
        </field>
    </record>

<!--    library book search view-->
    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Library Book Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="No Authors" name="without_author" domain="[('author_ids','=','False')]"/>
            </search>
        </field>
    </record>
</odoo>
