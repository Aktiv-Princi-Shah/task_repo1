<odoo>
    <!--    library book action-->
    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>
    <!--    library form view-->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="date_release"/>
                        <field name="library_id"/>
                        <field name="category_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="library_location" readonly="1"/>
                        <field name="book_reference" force_save="1" readonly="1"/>
                        <field name="isbn_number"/>
                        <field name="book_state"/>
                        <field name="book_description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <!--    library list view-->
    <record id="library_book_view_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_id"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="library_id"/>
                <field name="library_location"/>
                <field name="book_reference"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="book_state"/>
            </list>
        </field>
    </record>
    <!--    library book search view-->
    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="No Authors" name="without_author" domain="[('author_ids','=','False')]"/>
            </search>
        </field>
    </record>
</odoo>
