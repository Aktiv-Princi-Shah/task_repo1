<odoo>
<!--    library book tags action-->
    <record id="library_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">library.book.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--    library book tags form view-->
    <record id="library_book_tags_view_form" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">library.book.tag</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!--    library book tags list view-->
    <record id="library_book_tags_view_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">library.book.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

</odoo>
